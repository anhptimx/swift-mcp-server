{
  "mcp": {
    "servers": {
      "swift-mcp-server": {
        "command": "/path/to/swift-mcp-server/.build/release/swift-mcp-server",
        "args": [
          "--transport", "stdio",
          "--workspace", "${workspaceFolder}",
          "--log-level", "info"
        ],
        "env": {
          "PATH": "/usr/bin:/bin:/usr/sbin:/sbin:/Applications/Xcode.app/Contents/Developer/usr/bin",
          "SWIFT_MCP_MODE": "vscode"
        }
      }
    }
  }
}
